-semantic_form_for photo, :html => {:multipart => true} do |form|
  -form.inputs do
    - if photo.album
      =form.input :photo_album_id, :as => :hidden
    - elsif !@logged_in_member.photo_albums.empty?
      =form.input :photo_album, :prompt => false
    =form.input :image, :as => :file
    =form.input :name
    =form.input :description, :input_html  => {:rows => 5}
    =form.input :member_id, :as => :hidden
  - form.buttons do 
    = form.commit_button