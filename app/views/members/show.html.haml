- hide_page_title
#left_column
  #profile.bx
    .profile_photo
      - if @member == @logged_in_member
        =link_to image_for(@member, "140x"), :controller => 'member', :action => 'setphoto', :id => @logged_in_member
      - else
        =image_for(@member, "140x")
    .profile_info
      %h1
        = @member.full_name
      =render_status_for(@member)
      =render_status_form(@member)
    %br.clear
#right_column
  #options.group_section.bx
    .bx_in
      %ul.action_links
- options_panel do
  =link_if_allowed 'Edit', edit_member_proc(@member)