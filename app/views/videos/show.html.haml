- title "#{@video.name}"
%p
  =h @video.description
=@video.html
%br.clear
- options_panel do
  = link_if_allowed "#{forename_or_your(@video.member).titleize} videos", member_videos_proc(@video.member)
  - if @video.member==@logged_in_member
    = link_if_allowed "New video", new_video_proc
  - else
    = link_if_allowed "Add your own video", new_video_proc
  = link_if_allowed "Edit", edit_video_proc(@video)
  = link_if_allowed "Destroy", @video, :confirm => 'Are you sure?', :method => :delete

