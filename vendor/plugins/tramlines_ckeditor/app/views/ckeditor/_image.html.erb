<div class="FCKThumb">
  <table border="0" cellpadding="0" cellspacing="0" height="100" width="100">
    <tbody>
      <tr>
        <td align="center" valign="middle">
          <%#= image_tag(image.image.url(TramlinesCkeditor::IMAGE_PREVIEW_SIZE), :alt=> image.image.url("700x>"), :title=>image.name, :onerror=>"this.src='/javascripts/ckeditor/images/ckfnothumb.gif'", :class=>'image', 'data-image-id' => image.id) %>
          <%= image_tag(image.image.thumb(TramlinesCkeditor::IMAGE_PREVIEW_SIZE).url, :alt=> image.url, :title=>image.name, :onerror=>"this.src='/javascripts/ckeditor/images/ckfnothumb.gif'", :class=>'image', 'data-image-id' => image.id) %>
          
        </td>
       </tr>
     </tbody>
   </table>
   
   <div class="FCKFileName"><%= image.name %></div>
   <div class="FCKFileDate"><%= I18n.l(image.created_at, :format=>"%d.%m.%Y %H:%M") %></div>
   <%if false%><div class="FCKFileSize"><%= number_to_human_size(image.image.size, :precision => 2) %></div><%end%>
</div>
